<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.Editor.Views.Dialogs.OutlineDialog"
             x:Name="OutlineDialogRoot">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor">#3975D5</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E7E9EA</SolidColorBrush>
        <SolidColorBrush x:Key="LabelColor">#9CA3AF</SolidColorBrush>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="{StaticResource LabelColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#2E2E2E" CornerRadius="8" Padding="24" MinWidth="350">
        <StackPanel Spacing="16">
            <TextBlock Text="Outline" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            
            <!-- Size -->
            <StackPanel Spacing="4">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Size" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat='{}{0:0}'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="SizeSlider" Minimum="1" Maximum="50" Value="3" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Padding -->
            <StackPanel Spacing="4">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Padding" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=PaddingSlider, Path=Value, StringFormat='{}{0:0}'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="PaddingSlider" Minimum="0" Maximum="100" Value="0" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Color -->
            <StackPanel Spacing="4">
                <TextBlock Classes="label" Text="Color"/>
                <Grid ColumnDefinitions="Auto,*">
                    <Border x:Name="ColorPreview" Width="32" Height="32" CornerRadius="4" Background="#000000"/>
                    <TextBox x:Name="ColorTextBox" Grid.Column="1" Margin="8,0,0,0" Text="#000000" TextChanged="OnColorTextChanged"/>
                </Grid>
            </StackPanel>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,8,0,0">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Classes="secondary" Content="Cancel" Click="OnCancelClick"/>
                    <Button Classes="primary" Content="Apply" Click="OnApplyClick"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
