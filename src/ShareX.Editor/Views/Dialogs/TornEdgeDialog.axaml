<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="ShareX.Editor.Views.Dialogs.TornEdgeDialog"
             x:Name="TornEdgeDialogRoot">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor">#3975D5</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E7E9EA</SolidColorBrush>
        <SolidColorBrush x:Key="LabelColor">#9CA3AF</SolidColorBrush>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="{StaticResource LabelColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#2E2E2E" CornerRadius="8" Padding="24" MinWidth="350">
        <StackPanel Spacing="12">
            <TextBlock Text="Torn Edge" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            
            <!-- Depth -->
            <StackPanel Spacing="2">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Depth" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=DepthSlider, Path=Value, StringFormat='{}{0:0}'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="DepthSlider" Minimum="1" Maximum="100" Value="20" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Range -->
            <StackPanel Spacing="2">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Range" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=RangeSlider, Path=Value, StringFormat='{}{0:0}'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="RangeSlider" Minimum="1" Maximum="100" Value="20" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Sides -->
            <StackPanel Spacing="4">
                <TextBlock Classes="label" Text="Sides"/>
                <WrapPanel>
                    <CheckBox x:Name="TopCheckBox" Content="Top" IsChecked="True" Foreground="{StaticResource TextColor}" Margin="0,0,16,0"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="RightCheckBox" Content="Right" Foreground="{StaticResource TextColor}" Margin="0,0,16,0"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="BottomCheckBox" Content="Bottom" IsChecked="True" Foreground="{StaticResource TextColor}" Margin="0,0,16,0"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="LeftCheckBox" Content="Left" Foreground="{StaticResource TextColor}"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                </WrapPanel>
            </StackPanel>

            <!-- Random -->
            <CheckBox x:Name="RandomCheckBox" Content="Random" IsChecked="True" Foreground="{StaticResource TextColor}"
                      Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

            <!-- Curved edges -->
            <CheckBox x:Name="CurvedCheckBox" Content="Curved edges" Foreground="{StaticResource TextColor}"
                      Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,8,0,0">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Classes="secondary" Content="Cancel" Click="OnCancelClick"/>
                    <Button Classes="primary" Content="Apply" Click="OnApplyClick"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
