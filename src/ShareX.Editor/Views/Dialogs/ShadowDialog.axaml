<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="ShareX.Editor.Views.Dialogs.ShadowDialog"
             x:Name="ShadowDialogRoot">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor">#3975D5</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E7E9EA</SolidColorBrush>
        <SolidColorBrush x:Key="LabelColor">#9CA3AF</SolidColorBrush>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="{StaticResource LabelColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#2E2E2E" CornerRadius="8" Padding="24" MinWidth="350">
        <StackPanel Spacing="12">
            <TextBlock Text="Shadow" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            
            <!-- Opacity -->
            <StackPanel Spacing="2">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Opacity" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat='{}{0:0}%'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Value="80" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Size -->
            <StackPanel Spacing="2">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Size" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat='{}{0:0}'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="SizeSlider" Minimum="0" Maximum="100" Value="20" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Darkness -->
            <StackPanel Spacing="2">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Classes="label" Text="Darkness" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ElementName=DarknessSlider, Path=Value, StringFormat='{}{0:0}%'}" 
                               Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                </Grid>
                <Slider x:Name="DarknessSlider" Minimum="0" Maximum="100" Value="50" ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Offset X/Y -->
            <Grid ColumnDefinitions="*,8,*">
                <StackPanel Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Offset X"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=OffsetXSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="OffsetXSlider" Minimum="-100" Maximum="100" Value="5" ValueChanged="OnValueChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Offset Y"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=OffsetYSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="OffsetYSlider" Minimum="-100" Maximum="100" Value="5" ValueChanged="OnValueChanged"/>
                </StackPanel>
            </Grid>

            <!-- Color -->
            <StackPanel Spacing="4">
                <TextBlock Classes="label" Text="Color"/>
                <Grid ColumnDefinitions="Auto,*">
                    <Border x:Name="ColorPreview" Width="32" Height="32" CornerRadius="4" Background="#000000"/>
                    <TextBox x:Name="ColorTextBox" Grid.Column="1" Margin="8,0,0,0" Text="#000000" TextChanged="OnColorTextChanged"/>
                </Grid>
            </StackPanel>

            <!-- Auto Resize -->
            <CheckBox x:Name="AutoResizeCheckBox" Content="Auto resize" IsChecked="True" Foreground="{StaticResource TextColor}" 
                      Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,8,0,0">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Classes="secondary" Content="Cancel" Click="OnCancelClick"/>
                    <Button Classes="primary" Content="Apply" Click="OnApplyClick"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
