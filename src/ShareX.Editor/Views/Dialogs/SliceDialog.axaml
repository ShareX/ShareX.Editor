<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.Editor.Views.Dialogs.SliceDialog"
             x:Name="SliceDialogRoot">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor">#3975D5</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E7E9EA</SolidColorBrush>
        <SolidColorBrush x:Key="LabelColor">#9CA3AF</SolidColorBrush>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="{StaticResource LabelColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#2E2E2E" CornerRadius="8" Padding="24" MinWidth="350">
        <StackPanel Spacing="12">
            <TextBlock Text="Slice" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            
            <!-- Slice Height -->
            <Grid ColumnDefinitions="*,8,*">
                <StackPanel Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Min Height"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=MinHeightSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="MinHeightSlider" Minimum="1" Maximum="100" Value="5" ValueChanged="OnValueChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Max Height"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=MaxHeightSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="MaxHeightSlider" Minimum="1" Maximum="200" Value="20" ValueChanged="OnValueChanged"/>
                </StackPanel>
            </Grid>

            <!-- Slice Shift -->
            <Grid ColumnDefinitions="*,8,*">
                <StackPanel Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Min Shift"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=MinShiftSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="MinShiftSlider" Minimum="-100" Maximum="100" Value="-10" ValueChanged="OnValueChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="2">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Classes="label" Text="Max Shift"/>
                        <TextBlock Grid.Column="1" Text="{Binding ElementName=MaxShiftSlider, Path=Value, StringFormat='{}{0:0}'}" 
                                   Foreground="{StaticResource TextColor}" FontWeight="Bold"/>
                    </Grid>
                    <Slider x:Name="MaxShiftSlider" Minimum="-100" Maximum="100" Value="10" ValueChanged="OnValueChanged"/>
                </StackPanel>
            </Grid>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,8,0,0">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Classes="secondary" Content="Cancel" Click="OnCancelClick"/>
                    <Button Classes="primary" Content="Apply" Click="OnApplyClick"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
