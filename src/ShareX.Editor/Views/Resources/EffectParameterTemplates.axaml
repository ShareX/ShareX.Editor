<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="using:ShareX.Editor.ViewModels">

    <DataTemplate x:Key="GenericEffectParameterTemplate" DataType="vm:EffectViewModel">
        <StackPanel Spacing="12">
            <TextBlock Text="{Binding Name}"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="White"/>
            <TextBlock Text="{Binding Description}"
                       FontSize="12"
                       Foreground="#94A3B8"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Effect parameters will be configured here."
                       FontSize="11"
                       Foreground="#64748B"
                       FontStyle="Italic"
                       Margin="0,8,0,0"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
